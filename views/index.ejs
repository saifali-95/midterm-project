  <style>
    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      transition: 0.3s;
      width: 40%;
    }

    .card:hover {
      box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
    }

    .container {
      padding: 2px 16px;
    }

    main {
      display: flex;
      height: 100%;
      width: 90%;
      flex-direction: row;
      background-color: #f4f1ec;
      border-bottom: 3px #545149;
      justify-content: space-evenly;
    }
  </style>

</head>

<!-- "/" or "/home" first page, contains graphic
  below, 3 clickable category areas, redirecting to /:categoryid
  1. Men's Running
  2. Men's Casual
  3. Men's Basketball
-->


<%- include('partials/_header') %>

  <body>
    <main class="main">
      <div class="card">
        <img
          src='https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.omegasports.com%2Fprodimages%2F5731-DEFAULT-l.jpg&f=1&nofb=1'
          alt="men's running shoes">
        <div class="container">
          <h4><b>Men's Running</b></h4>
        </div>
      </div>

      <div class="card">
        <img
          src='https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fimage.sportsmansguide.com%2Fadimgs%2Fl%2F1%2F163508_ts.jpg&f=1&nofb=1'
          alt="men's casual shoes">
        <div class="container">
          <h4><b>Men's Casual</b></h4>
