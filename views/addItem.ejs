<!DOCTYPE html>
<html lang="en">
<meta charset="utf-8">

<head>
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/universal_layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/addItem.css" type="text/css" />

</head>
<header>
  <%- include('partials/_header') %>
</header>

<body>
  <h1><b>Add a new shoe to sell:</b></h1>
  <main>
    <form id="addItem" action="" method="POST">

      <div class="new-input">
        <label for="name">Name</label>
        <input type="textarea" name="name" required />
      </div>

      <div class="new-input">
        <label for="info">Info</label>
        <input type="textarea" name="info" required />
      </div>

      <div class="new-input">
        <label for="size">Size</label>
        <input type="number" name="size" required />
      </div>

      <div class="new-input">
        <label>Category</label>
        <select id="drop-down" name="category">
          <option value="Running Shoes">Running Shoes</option>
          <option value="Casual Shoes">Casual Shoes</option>
          <option value="Basketball Shoes">Basketball Shoes</option>
        </select>
      </div>


      <div class="new-input">
        <label>Color</label>
        <select id="drop-down" name="color">
          <option value="Red">Red</option>
          <option value="Orange">Orange</option>
          <option value="Yellow">Yellow</option>
          <option value="Green">Green</option>
          <option value="Blue">Blue</option>
          <option value="Purple">Purple</option>
          <option value="Black">Black</option>
          <option value="Grey">Grey</option>
          <option value="White">White</option>
          <option value="Mixed">Mixed</option>
        </select>
      </div>

      <div class="new-input">
        <label for="brand">Brand</label>
        <input type="text" name="brand" required />
      </div>

      <div class="new-input">
        <label for="price">Price</label>
        <input type="number" name="price" required />
      </div>

      <div class="new-input">
        <label for="photo">Photo</label>
        <input type="text" name="photo" required />
      </div>

      <div class="new-input">
        <button class="button" type="submit">Add Item</button>
      </div>

    </form>
  </main>
</body>
