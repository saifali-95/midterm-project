<!DOCTYPE html>
<html lang="en">
<meta charset="utf-8">

<head>
  <!-- header styling -->
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/universal_layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/addItem.css" type="text/css" />

</head>
<header>
  <%- include('partials/_header') %>
</header>

<body>
  <h1><b>Add a new shoe to sell:</b></h1>
  <main>
    <form id="addItem" action="" method="POST">

      <div class="new-input">
        <label for="name">Name</label>
        <input type="textarea" name="name" required />
      </div>

      <div class="new-input">
        <label for="info">Info</label>
        <input type="textarea" name="info" required />
      </div>

      <div class="new-input">
        <label for="size">Size</label>
        <input type="number" name="size" required />
      </div>

      <div class="new-input">
        <label for="category">Category</label>
        <input type="text" name="category" required />
      </div>

      <div class="new-input">
        <label for="color">Color</label>
        <input type="text" name="color" required />
      </div>

      <div class="new-input">
        <label for="brand">Brand</label>
        <input type="text" name="brand" required />
      </div>

      <div class="new-input">
        <label for="price">Price</label>
        <input type="number" name="price" required />
      </div>

      <div class="new-input">
        <label for="photo">Photo</label>
        <input type="text" name="photo" required />
      </div>

      <div class="new-input">
        <button class="button" type="submit">Add Item</button>
      </div>

    </form>
  </main>
</body>
